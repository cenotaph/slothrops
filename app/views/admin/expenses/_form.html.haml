= semantic_form_for [:admin, @expense] do |f|
  -if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this expense from being saved:"
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg

  = f.inputs do
    = f.input :expense_date, :as => :string, :input_html => {:class => 'date-picker'}
    = f.input :recipient
    = f.input :description
    = f.input :amount
    = f.input :notes
    = f.input :user

  .actions
    = f.submit 'Save'

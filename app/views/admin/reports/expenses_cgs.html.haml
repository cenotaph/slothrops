%h3.lined Expenses + Cost of goods sold

%p= "From #{@start_date} to #{@end_date}"

%table#monthly_report
  %thead
    %th Date
    %th Description of expense or CGS
    %th Amount
  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.expense_date.strftime("%d.%m.%Y")
        %td= "#{expense.recipient} / #{expense.description}"
        %td.amount= number_to_currency(expense.amount)
  %thead
    %th &nbsp;
    %th.total Total:
    %th.amount= number_to_currency(@expenses.map(&:amount).sum)
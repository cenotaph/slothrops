%h1 Listing events

%table
  %tr
    %th Title
    %th Description
    %th Start at
    %th End at
    %th Published
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.title
      %td= event.description
      %td= event.start_at
      %td= event.end_at
      %td= event.published
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_admin_event_path(event)
      %td= link_to 'Destroy', [:admin, event], :confirm => 'Are you sure?', :method => :delete


= form_for [:admin,  @staticpage] do |f|
  -if @staticpage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@staticpage.errors.count, "error")} prohibited this staticpage from being saved:"
      %ul
        - @staticpage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.cktext_area :body, :label => 'Body (keep images under 230px wide for sidebar)'
  .field
    = f.label :abstract
    = f.cktext_area :abstract
  .field
    = f.label :published
    = f.check_box :published
  .actions
    = f.submit 'Save'

= semantic_form_for [:admin, @voucher] do |f|
  -if @voucher.errors.any?
    #error_explanation
      %h2= "#{pluralize(@voucher.errors.count, "error")} prohibited this voucher from being saved:"
      %ul
        - @voucher.errors.full_messages.each do |msg|
          %li= msg
  = f.input :sold_at, :as => :string, :input_html => {:class => 'date-picker'}
  = f.input :user, :as => :select, :label => "Sold by: "       
  = f.input :sale_id, :as => :hidden, :value => @sale.id
  = f.input :number, :label => 'Enter the voucher number, a unique string of gibberish you will write on the back of it and sign'
  = f.input :amount
  = f.submit

= form_for @sale do |f|
  -if @sale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"
      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :paymenttype
    = f.text_field :paymenttype
  .field
    = f.label :inventory
    = f.text_field :inventory
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :discount_reason
    = f.text_field :discount_reason
  .field
    = f.label :sold_at
    = f.datetime_select :sold_at
  .actions
    = f.submit 'Save'

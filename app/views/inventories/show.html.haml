= content_for :left_column do
  .four.columns.alpha= render :partial => 'shared/right_rec_featured', :locals => {:featured => @featured, :reviews => @reviews }

.twelve.columns.omega.inventory_item
  - if @inventory.edition_id.blank?
    = render :partial => "shared/other_item", :locals => {:inventory => @inventory}
  - else
    = render :partial => "shared/title", :locals => {:inventory => @inventory}


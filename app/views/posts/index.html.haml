.row
  %ul{"data-orbit" => ""}
    - @posts.each do |post|
      - next if post.image.blank?
      - if post.image_width
        - next if post.image_width < 900
      %li
        = link_to "javascript:$('html, body').animate({ scrollTop: $('#post_index_#{post.id.to_s}').offset().top }, 1000);" do
          = image_tag post.image.url(:standard)
          .orbit-caption= link_to post.subject, post

  %h1 Recent news
  - @posts.each do |post|
    .post= render :partial => 'post', :locals => {:post => post}
    
  .row
    .large-9.columns= paginate @posts